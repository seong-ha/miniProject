<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.community.yedam.freeBoard.service.FreeBoardMapper">

	<select id="freeBoardSelectlist" resultType="co.community.yedam.freeBoard.service.FreeBoardVO">
		SELECT * FROM FREE_BOARD
	</select>
	
	<!-- 동적 sql예시. id만 들어오면 찾아주고, 둘 다 들어오면 로그인 처리해주는 거 -->
	<select id="freeBoardSelect" resultType="co.community.yedam.freeBoard.service.FreeBoardVO">
		SELECT * FROM FREE_BOARD
		WHERE SAMPLE_ID = #{sampleId}
		<if test="samplePassword != null">
			AND SAMPLE_PW = #{samplePw}
		</if>
	</select>
	
	<insert id="freeBoardInsert" parameterType="co.community.yedam.freeBoard.service.FreeBoardVO">
		INSERT INTO FREE_BOARD
		VALUES (#{freeBoardId}, #{freeBoardTitle}, #{freeBoardSubject}, #{freeBoardSubject}, #{freeBoardDate}, 
		#{freeBoardAttech}, #{freeBoardAttechDir}, #{freeBoardHit}, #{freeBoardLike}, #{memberId})
	</insert>
	
	<update id="freeBoardUpdate" parameterType="co.community.yedam.freeBoard.service.FreeBoardVO">
		UPDATE FREE_BOARD
		SET FREE_BOARD_TITLE = #{freeBoardTitle}, 
			FREE_BOARD_SUBJECT = #{freeBoardSubject}
		WHERE FREE_BOARD_ID = #{freeBoardId}
	</update>
	
	<delete id="freeBoardDelete" parameterType="co.community.yedam.freeBoard.service.FreeBoardVO">
		DELETE FROM FREE_BOARD
		WHERE FREE_BOARD_ID = #{freeBoardId}
	</delete>

</mapper>